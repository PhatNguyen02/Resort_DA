<script>
    // Lấy các phần tử của ngày Check In và Check Out
    var checkIn = document.getElementById('checkIn');
    var checkOut = document.getElementById('checkOut');

    // Hàm để cập nhật giá trị min của ngày Check Out khi ngày Check In thay đổi
    checkIn.addEventListener('change', function () {
        var checkInDate = new Date(checkIn.value); // Lấy giá trị của ngày Check In
        checkInDate.setDate(checkInDate.getDate() + 1); // Thêm 1 ngày vào ngày Check In

        // Chuyển giá trị ngày mới thành định dạng yyyy-mm-dd và gán vào min của CheckOut
        var checkOutMinDate = checkInDate.toISOString().split('T')[0]; // Lấy ngày dưới dạng yyyy-mm-dd
        checkOut.min = checkOutMinDate; // Cập nhật giá trị min của CheckOut
    });
</script>