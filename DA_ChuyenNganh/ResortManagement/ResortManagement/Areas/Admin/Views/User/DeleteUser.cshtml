@model ResortManagement.Models.User

@{
    ViewBag.Title = "Delete User Confirmed";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1_Admin.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-body text-left">
            <h2 class="my-4 text-center">Confirm Delete User</h2>

            <dl class="row justify-content-center">
                <dt class="col-sm-3">Full Name:</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone Number:</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">User Name:</dt>
                <dd class="col-sm-9">@Model.Username</dd>
            </dl>

            <form asp-action="DeleteUserConfirmed" method="post">
                @Html.AntiForgeryToken() 
                <input type="hidden" name="id" value="@Model.UserID" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger">Delete User</button>
                    <a href="@Url.Action("Index", "User")" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>

    </div>
</div>
