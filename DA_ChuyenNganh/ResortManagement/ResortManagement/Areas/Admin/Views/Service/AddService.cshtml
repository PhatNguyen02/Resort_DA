@model ResortManagement.Models.Services

@{
    ViewBag.Title = "Add New Service";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1_Admin.cshtml";

}

<div class="card">
    <div class="card-body" style="margin-top: 60px">
        <h2 class="my-4 text-center">Add New Service</h2>

        @using (Html.BeginForm("AddService", "Service", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.ServiceName, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.ServiceName, new { @class = "form-control", @placeholder = "Enter service name", required = "required" })
                        @Html.ValidationMessageFor(m => m.ServiceName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.ServiceCategory, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.ServiceCategory, new { @class = "form-control", @placeholder = "Enter service category", required = "required" })
                        @Html.ValidationMessageFor(m => m.ServiceCategory, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Price, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @placeholder = "Enter price", type = "number", step = "0.01", min = "0", required = "required" })
                        @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Description, htmlAttributes: new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @placeholder = "Enter description", rows = 4 })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.StatusServices, htmlAttributes: new { @class = "form-label" })
                        @Html.DropDownListFor(m => m.StatusServices,
                            new SelectList(new List<SelectListItem>
                            {
                                new SelectListItem { Text = "Available", Value = "Available" },
                                new SelectListItem { Text = "Not Available", Value = "Not Available" }
                            }, "Value", "Text"),
                            "-- Select Status --",
                            new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(m => m.StatusServices, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.ImageServices, htmlAttributes: new { @class = "form-label" })
                        <input type="file" class="form-control" name="ImageServices" id="ImageServices" accept="image/*" />
                        @Html.ValidationMessageFor(m => m.ImageServices, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-block">Add Service</button>
                        <a href="@Url.Action("Index", "Service")" class="btn btn-secondary mt-2">Back</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


