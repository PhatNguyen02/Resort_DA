@model List<ResortManagement.Models.Services>
@{
    ViewBag.Title = "Service Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1_Admin.cshtml";

    <style>
        #searchBox {
            background-color: #f8f9fa;
            border: 2px solid #007bff;
            border-radius: 0.375rem;
            transition: border-color 0.3s ease;
        }


            #searchBox:focus {
                border-color: #0056b3;
                box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
            }
    </style>
}

<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <form method="get" action="@Url.Action("Index", "Service", new { area = "Admin" })" class="d-flex">
                    <input type="text" class="form-control " id="searchBox" placeholder="Enter ServiceName..." value="@ViewBag.Search" />
                </form>
            </div>

            <div class="col-md-4 d-flex justify-content-md-end" style="margin-top: 60px;">
                <div class="d-flex justify-content-end">
                    <a href="@Url.Action("AddService", "Service")" class="btn btn-primary">
                        <i class="anticon anticon-plus-circle m-r-5"></i>
                        <span>Add Service</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>Service ID</th>
                        <th>Service Name</th>
                        <th>Service Category</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model)
                    {
                        <tr>
                            <td>@service.ServiceID</td>
                            <td>@service.ServiceName</td>
                            <td>@service.ServiceCategory</td>
                            <td>@(service.Price.HasValue ? service.Price.Value.ToString("#,##0") : "0")$</td>
                            <td>@service.Description</td>
                            <td>@service.StatusServices</td>
                            <td>
                                <img src="~/assets_detail/img/service/@service.ImageServices" alt="Service Image" style="width: 80px; height: 60px; object-fit: cover;">
                            </td>
                            <td class="text-right">
                                <a href="@Url.Action("EditService","Service", new { id = service.ServiceID })" class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                    <i class="anticon anticon-edit"></i>
                                </a>
                                <a href="@Url.Action("DeleteService","Service", new { id = service.ServiceID })" class="btn btn-icon btn-hover btn-sm btn-rounded">
                                    <i class="anticon anticon-delete"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

            <script>
                $(document).ready(function () {
                    $("#searchBox").on("input", function () {
                        var searchTerm = $(this).val();
                        $.ajax({
                            url: '@Url.Action("Index", "Service", new { area = "Admin" })',
                            type: 'GET',
                            data: { search: searchTerm },
                            success: function (data) {
                                $("tbody").html($(data).find("tbody").html());
                            }
                        });
                    });
                });
            </script>
        </div>
    </div>
</div>
