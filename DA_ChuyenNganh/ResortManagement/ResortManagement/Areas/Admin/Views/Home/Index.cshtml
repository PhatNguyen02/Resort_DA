
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1_Admin.cshtml";

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
            .card {
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                text-align: center;
            }

                .card h5 {
                    font-size: 18px;
                    margin-bottom: 0;
                }

                .card p {
                    font-size: 16px;
                    margin: 0;
                }

            .section-title {
                font-weight: bold;
                margin-top: 20px;
            }

            .dashboard-container {
                padding: 20px;
            }
        </style>
    }

<div class="dashboard-container container">
    <h2 class="section-title">DASHBOARD</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="text-success">Total Revenue</h5>
                    <p class="text-success fs-4">@ViewBag.TotalRevenue</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="text-warning">Rooms</h5>
                    <p class="text-warning fs-4">@ViewBag.TotalRooms</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="text-success">Users</h5>
                    <p class="text-success fs-4">@ViewBag.TotalUsers</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="text-info">Services</h5>
                    <p class="text-info fs-4">@ViewBag.TotalServices</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="text-warning">Promotions</h5>
                    <p class="text-warning fs-4">@ViewBag.TotalPromotions</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="text-success">Bookings</h5>
                    <p class="text-success fs-4">@ViewBag.TotalBookings</p>
                </div>
            </div>
        </div>
    </div>
<h2 class="section-title">Booking Analytics</h2>
<div class="row g-4">
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="text-success">Revenue / Day</h5>
                <p class="text-success fs-4">@ViewBag.RevenueToday</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="text-primary">Booking / Day</h5>
                <p class="text-primary fs-4">@ViewBag.BookingToday</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="text-success">Occupacy Room</h5>
                <p class="text-success fs-4">@ViewBag.OccupiedRooms</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="text-primary">Vacancy Room</h5>
                <p class="text-primary fs-4">@ViewBag.VacantRooms</p>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

