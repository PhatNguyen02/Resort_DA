@model ResortManagement.Models.Promotions

@{
    ViewBag.Title = "Edit Promotion";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1_Admin.cshtml";
}

<div class="card">
    <div class="card-body" style="margin-top: 60px">
        <h2 class="my-4 text-center">Edit Promotion</h2>

        @using (Html.BeginForm("EditPromotion", "Promotion", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.PromotionID)
            @Html.HiddenFor(m => m.PromotionCode) 

            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Description, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @placeholder = "Enter promotion description", required = "required" })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Discount, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Discount, new { @class = "form-control", @placeholder = "Enter discount amount", required = "required", type = "number", step = "0.01" })
                        @Html.ValidationMessageFor(m => m.Discount, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.IsFlashDeal, htmlAttributes: new { @class = "form-label" })
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.IsFlashDeal, new { @class = "form-check-input" })     
                            @Html.CheckBoxFor(m => m.IsFlashDeal, new { @class = "form-check-input" })
                            <label class="form-check-label" for="IsFlashDeal">Is Flash Deal?</label>
                        </div>
                        @Html.ValidationMessageFor(m => m.IsFlashDeal, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.StartDate, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control", @placeholder = "Select start date", type = "date", required = "required" })
                        @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.EndDate, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control", @placeholder = "Select end date", type = "date", required = "required" })
                        @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
                        <a href="@Url.Action("Index", "Promotion")" class="btn btn-secondary mt-2">Cancel</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
