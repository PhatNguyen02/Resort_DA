@model List<ResortManagement.Models.Promotions>

@{
    ViewBag.Title = "Promotion List";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1_Admin.cshtml";

    <style>
        #searchBox {
            background-color: #f8f9fa;
            border: 2px solid #007bff;
            border-radius: 0.375rem;
            transition: border-color 0.3s ease;
        }


            #searchBox:focus {
                border-color: #0056b3;
                box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
            }
    </style>
}

<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-md-8">
                <form method="get" action="@Url.Action("Index", "Promotion", new { area = "Admin" })" class="d-flex justify-content-center">
                    <input type="text" class="form-control" id="searchBox" name="search" placeholder="Enter PromotionCode..." value="@ViewBag.Search" />
                </form>
            </div>

            <div class="col-md-4 d-flex justify-content-md-end" style="margin-top: 60px;">
                <div class="d-flex justify-content-end">
                    <a href="@Url.Action("AddPromotion", "Promotion")" class="btn btn-primary">
                        <i class="anticon anticon-plus-circle m-r-5"></i>
                        <span>Add Promotion</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>Promotion ID</th>
                        <th>Promotion Code</th>
                        <th>Description</th>
                        <th>Discount (%)</th>
                        <th>Flash Deal</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var promotion in Model)
                    {
                        <tr>
                            <td>@promotion.PromotionID</td>
                            <td>@promotion.PromotionCode</td>
                            <td>@promotion.Description</td>
                            <td>@promotion.Discount</td>
                            <td>
                                @if (promotion.IsFlashDeal == true)
                                {
                                    <span class="badge badge-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">No</span>
                                }
                            </td>
                            <td>@(promotion.StartDate.HasValue ? promotion.StartDate.Value.ToString("dd/MM/yyyy") : "N/A")</td>
                            <td>@(promotion.EndDate.HasValue ? promotion.EndDate.Value.ToString("dd/MM/yyyy") : "N/A")</td>

                            <td>
                                <a href="@Url.Action("EditPromotion","Promotion", new { id = promotion.PromotionID })" class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                    <i class="anticon anticon-edit"></i>
                                </a>
                                <a href="@Url.Action("DeletePromotion","Promotion", new { id = promotion.PromotionID })" class="btn btn-icon btn-hover btn-sm btn-rounded">
                                    <i class="anticon anticon-delete"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center">No promotions available.</td>
                        </tr>
                    }
                </tbody>
            </table>

            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

            <script>
                $(document).ready(function () {
                    $("#searchBox").on("input", function () {
                        var searchTerm = $(this).val();
                        $.ajax({
                            url: '@Url.Action("Index", "Promotion", new { area = "Admin" })',
                            type: 'GET',
                            data: { search: searchTerm },
                            success: function (data) {
                                $("tbody").html($(data).find("tbody").html());
                            }
                        });
                    });
                });
            </script>
        </div>
    </div>
</div>
