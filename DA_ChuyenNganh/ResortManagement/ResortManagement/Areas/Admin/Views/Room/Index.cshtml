@model List<ResortManagement.Models.Room>
@{
    ViewBag.Title = "Room Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1_Admin.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                @*<div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        <select class="custom-select" style="min-width: 180px;">
                            <option selected>Status</option>
                            <option value="all">All</option>
                            <option value="available">Available</option>
                            <option value="booked">Booked</option>
                        </select>
                    </div>
                    <div class="m-b-10">
                        <input type="text" class="form-control" placeholder="Search by Room Type">
                    </div>
                </div>*@
            </div>
            <div class="col-md-4 d-flex justify-content-md-end" style="margin-top: 60px;">
                <div class="d-flex justify-content-end">
                    <a href="@Url.Action("AddRoom", "Room")" class="btn btn-primary">
                        <i class="anticon anticon-plus-circle m-r-5"></i>
                        <span>Add Room</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>Room ID</th>
                        <th>Room Type</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model)
                    {
                        <tr>
                            <td>@room.RoomID</td>
                            <td>@room.RoomType</td>
                            <td>@room.Price</td>
                            <td>@room.Status</td>
                            <td>@room.Description</td>
                            <td>
                                <img src="~/assets_detail/img/room/@room.ImageRooms" alt="Room Image" style="width: 80px; height: 60px; object-fit: cover;">
                            </td>
                            <td class="text-right">
                                <a href="@Url.Action("EditRoom","Room", new { id = room.RoomID })" class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                    <i class="anticon anticon-edit"></i>
                                </a>
                                <a href="@Url.Action("DeleteRoom","Room", new { id = room.RoomID })" class="btn btn-icon btn-hover btn-sm btn-rounded">
                                    <i class="anticon anticon-delete"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
